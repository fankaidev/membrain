{
    "compilerOptions": {
        "strict": true,
        "target": "es2019",
        "moduleResolution": "bundler",
        "module": "ES6",
        "esModuleInterop": true,
        "sourceMap": false,
        "rootDir": "src",
        "outDir": "dist/js",
        "noEmitOnError": false,
        "jsx": "react",
        "lib": [
            "dom",
            "es2019"
        ],
        "typeRoots": [
            "node_modules/@types"
        ],
        "skipLibCheck": true
    }
}